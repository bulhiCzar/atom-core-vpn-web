{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Atom Core VPN",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "fs": {
        "scope": [
          "$RESOURCE/*"
        ]
      },
      "all": true,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "targets": "all",
      "identifier": "com.AtomCoreVPN.to",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "wiresock/wiresock-vpn-client-x64-1.2.37.1.msi"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src * data:"
    },
    "updater": {
      "active": false,
      "endpoints": [
        "https://gist.githubusercontent.com/brendanosborne/a8440ea78d0d60bbc48c45aa873c6624/raw/tunnlto-updater.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFDRUMzNTFDRUJDM0YxNkQKUldSdDhjUHJIRFhzSE1DbEtkUG4wWlk0aHQxM1B3a0d0OElLWGUvaTNTa09TOGl6dU9yNWhKSEMK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Atom Core VPN",
        "width": 900,
        "height": 700
      }
    ]
  }
}
